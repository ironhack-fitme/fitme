<h2 style="margin-top: 7%;">Add a new activity</h2>
<form action="/AddActivity" method="post" enctype="multipart/form-data" style="margin-top: 7%;">
  <select name="activityType" id="activityType">
    {{#each types}}
    <option value="{{this}}">{{this}}</option>
    {{/each}}
  </select>

  <label for="occupation">Enter distance</label>
  <input type="number" id="distance" name="distance" min="0">

  <label for="duration">Enter duration in minutes:</label>
  <input type="number" id="duration" name="duration" min="0">

  <label for="description">Describe the activits</label>
  <textarea id="description" name="description" rows="5" cols="33">It was a sunny, yet breezy day</textarea>

  <label for="calories">Enter the number of burned calories</label>
  <input type="number" id="calories" name="calories" min="0">

  <label>Upload activity photo</label>
  <input type="file" name="photo">

  <button type="submit">Add activity</button>
</form>