<h2 style="margin-top: 7%;position:relative;left:40%">Edit Activity</h2>

<form action="/activity/{{activity._id}}/edit" method="post" enctype="multipart/form-data" style="margin-top: 2%;padding:4%">
 <select name="activityType" id="activityType">
    {{#each types}}
    <option value="{{this}}">{{this}}</option>
    {{/each}}
  </select>
  <div class="form-group">
    <label for="distance">Enter distance in meters:</label>
    <input type="number" class="form-control" id="distance" placeholder="distance"  name="distance" min="0" value="{{activity.distance}}" >
  </div>
   <div class="form-group">
    <label for="duration">Enter duration in minutes:</label>
    <input type="number" class="form-control" id="duration" placeholder="duration"  name="duration" min="0" value="{{activity.duration}}">
  </div>
  
  <div class="form-group">
    <label for="calories">Enter the number of burned calories:</label>
    <input type="number" class="form-control" id="calories" placeholder="calories" name="calories" min="0" value="{{activity.calories}}">
  </div>
 <div class="form-group">
 <label>Upload activity photo</label>
  <input type="file" name="photo">

  <button type="submit" class="btn btn-primary">Upload image</button>
 </div>
  <div class="form-group">
  <textarea id="description" name="description" rows="5" cols="33" placeholder='{{activity.description}}'></textarea>
  </div>
  <button type="submit" class="btn btn-primary" style="border: none;">Edit activity</button>
</form>